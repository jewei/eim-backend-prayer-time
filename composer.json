{
    "name": "jewei/prayer-time",
    "description": "Prayer time generation",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "Jewei Mak",
            "email": "jewei.mak@gmail.com"
        }
    ],
    "require": {
        "php": "^8.2",
        "guzzlehttp/guzzle": "^7.8",
        "laravel/framework": "^10.28"
    },
    "require-dev": {
        "fakerphp/faker": "^1.23",
        "laravel/pint": "^1.13",
        "phpstan/phpstan": "^1.10"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/",
            "Database\\Factories\\": "database/factories/"
        }
    },
    "scripts": {
        "setup": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\"",
            "@php -r \"file_put_contents('database/database.sqlite', '');\""
        ],
        "fast-refresh": "@php console.php app:fast-seed-database",
        "refresh": "@php console.php app:seed-database",
        "cron": "@php console.php app:fetch-prayer-time",
        "lint": "pint --ansi",
        "phpstan": "phpstan analyse --ansi --memory-limit=-1"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    }
}
